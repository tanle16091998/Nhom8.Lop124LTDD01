<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>  <!-- Giảm bán kính -->
            <gradient
                android:angle="360"
                android:endColor="#2ABCA3"
                android:startColor="#C10C1E"
                android:type="linear" />
            <!-- Xóa phần kích thước để dùng toàn bộ không gian của button -->
        </shape>
    </item>

    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <solid android:color="#144B52"/>
        </shape>
    </item>
</layer-list>
