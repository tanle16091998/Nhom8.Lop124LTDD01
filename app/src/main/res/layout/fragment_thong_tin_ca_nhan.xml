<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongTinCaNhanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/anhdaidien"
            android:contentDescription="hello" />

        <!-- Nút tải ảnh -->
        <Button
            android:id="@+id/btnTaiAnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải ảnh lên"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Họ và Tên -->
        <EditText
            android:id="@+id/etHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và Tên"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- Mã sinh viên -->
        <EditText
            android:id="@+id/etMaSinhVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã sinh viên"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Ngày sinh -->
        <EditText
            android:id="@+id/etNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày sinh"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Lớp -->
        <EditText
            android:id="@+id/etLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lớp"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Nhóm -->
        <EditText
            android:id="@+id/etNhom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhóm"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Các nút chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm" />

            <Button
                android:id="@+id/btnSua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnXoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>